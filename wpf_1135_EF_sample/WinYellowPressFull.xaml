<Window x:Class="wpf_1135_EF_sample.WinYellowPressFull"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_1135_EF_sample"
        mc:Ignorable="d"
        Title="WinYellowPressFull" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Кликбейт заголовок: " VerticalContentAlignment="Top"/>
            <TextBlock Text="{Binding YP.TitleArticle}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Треш-статья: " VerticalContentAlignment="Top"/>
            <TextBlock Text="{Binding YP.Description}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Айди жертвы: " VerticalContentAlignment="Top"/>
            <TextBlock Text="{Binding YP.IdSinger}"/>
        </StackPanel>
    </StackPanel>
</Window>
